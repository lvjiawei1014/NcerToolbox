<Window x:Class="FloatInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatInfo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Foreground="White" Background="{x:Null}" Loaded="Window_Loaded">
    <Window.DataContext>
        <local:FloatInfoViewModel/>
    </Window.DataContext>
    <Grid>

        <Label Content="{Binding Info}" FontSize="72" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
